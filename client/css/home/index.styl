.home-presentation
  background-color primaryColor
  background-image url(../images/background.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  height 100vh  
  &__hover
    background-color rgba(0,0,0,.5)
    height 100%
  &__wrapper
    align-items center    
    display flex
    flex-direction column      
    height 100%
    justify-content center    
  &__text
    color white
    text-align center
    max-width 250px
    h2      
      font-size 4.687em
      margin 0
    p
      font-size .76em
      margin 0

.home-biography
  background-color white
  &__text
    font-size 18px
    p
      line-height 1.5em
    a
      background-color primaryColor
      color white
      padding .2em .2em 0 
      text-decoration none

.home-projects
  background-color primaryColor
  padding 2em 0
  &__list
    display flex
    flex-direction column

.home-project
  color white
  margin 1em 0
  max-width 350px
  &__description
    font-family secondaryFont

.home-posts
  background-color secondaryColor
  padding 2em 0
  &__list
    display flex
    flex-direction column
    margin 1em 0
  &__title
    margin 0 1rem

.single-post
  color white
  margin 1em 0
  position relative
  a
    color white
  &__image
    display block
    margin 0
    img
      width 100%
  &__info
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    &:hover
      background-color rgba(0,0,0,.6)
  &__info-wrapper
    height 100%
    position relative
  &__info-bottom,
  &__info-top
    position absolute
  &__info-bottom
    bottom 1em
    left 1em
  &__info-top
    top 1em
    right 1em
  &__title
    margin 0
  &__date
    display flex
    flex-direction column
    .day
      font-size 32px
    .month
      font-size 23px
    .year
      font-size 18px

@media only screen and (min-width: 640px)
  .home-presentation    
    &__text
      max-width none
  .home-projects
    &__list
      flex-direction row
      justify-content space-around

@media only screen and (min-width: 900px)
  .home-posts
    &__list
      flex-direction row
    &__item
      flex 1

@media only screen and (min-width: 1000px)
  .home-presentation    
    &__wrapper
      align-items flex-end