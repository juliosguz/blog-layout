@import '_normalize'

@import 'config'

body
  font-family: 'Roboto', sans-serif;
  color text_color
  font-size 16px

::selection
  background-color primary_color

.header
  background-color primary_color
  background-image url(https://firebasestorage.googleapis.com/v0/b/juliosguz-ee474.appspot.com/o/site%2Fbackground-medium.jpg?alt=media&token=0754cd2d-3ff0-490c-8209-188e17a5422f)
  background-repeat no-repeat
  background-size cover
  background-position center
  border-bottom 5px solid primary_color

.information
  align-items center
  display flex
  justify-content center
  flex-direction column
  padding 2em 0 3em
  &__img
    border-radius 60px
    overflow hidden
    font-size 0
    height 100px
    width 100px
    img
      width 100%
  &__text
    color white
    margin-left 10px
    text-align center
    h2
      font-weight 700
      font-size 1.8em
      margin 0.5em 0
    p
      font-weight 300
      font-size 1em
      margin 0
.navigation
  background-color rgba(0,0,0,0.1)
  padding 1em 0

.menu
  justify-content center
  display flex
  font-size 0.8em
  font-weight 300
  list-style none
  margin 0
  padding 0
  li > a
    color white
    margin 1.8em
    text-decoration none

.posts-container
  padding 0 1em
  .post
    margin 1em 0

.post
  box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)
  &__link
    color text_color
    display block
    text-decoration none
  &__img
    width 100%
  &__content
    padding 1em
  &__title
    font-size 14px
    margin 0
  &__excerpt
    font-size 12px
  &__details
    display flex
    justify-content:space-between;
  &__date
    font-size 12px

.tags
  font-size 12px
  color white
  &__item
    border-radius: 5px
    padding 0.1em 0.5em
    &--firebase
      background firebase_color
    &--angular
      background angular_color

.footer
  background-color text_color
  color white
  padding 1em 0
  &__copy
    margin 0
    padding 0 1em

@media only screen and (min-width: 640px)
  .wrapper
    margin 0 auto
    max-width 900px

  .menu
    font-size 1.1em

  .information
    flex-direction row
    height 70vh
    padding 0
    &__text
      text-align left
      h2
        margin 0

  .posts-container
    display flex
    flex-wrap wrap
    justify-content: space-between;
    .post
      width 49%

@media only screen and (min-width: 900px)
  .header
    background-image url(https://firebasestorage.googleapis.com/v0/b/juliosguz-ee474.appspot.com/o/site%2Fbackground-large.jpg?alt=media&token=001b3ba2-87bf-4158-a854-8742b1b440c1)

  .posts-container
    padding 0
