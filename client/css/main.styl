@import '_normalize'
@import 'config'

body
  font-family primaryFont
  color textPrimaryColor
  font-size 16px

::selection
  background-color primaryColor
  color white

.wrapper
  display block
  margin 0 1em
  padding 1em 0

.logo
  display block
  color white
  height 44px
  border 4px solid white
  font-size 35px
  width 44px
  text-align center
  span
    vertical-align sub

.page
  &__title
    border 4px solid white
    color white
    display inline-block
    font-size 25px
    margin 0
    padding .8em .4em .6em

.header
  position fixed
  width 100%
  &--blue
    background-color primaryColor
    box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)

.navigation
  align-items center
  display flex
  justify-content space-between

.menu
  justify-content center
  display flex
  font-size 0.9em
  font-weight 300
  list-style none
  margin 0
  padding 0
  &__link
    color rgba(255,255,255,0.5)
    margin-left 1rem
    text-decoration none
  &__active
    color rgba(255,255,255,1)

.home-presentation
  background-color primaryColor
  background-image url(../images/background.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  height 100vh  
  &__hover
    background-color rgba(0,0,0,.5)
    height 100%
  &__wrapper
    align-items center    
    display flex
    flex-direction column      
    height 100%
    justify-content center    
  &__text
    color white
    text-align center
    max-width 250px
    h2      
      font-size 4.687em
      margin 0
    p
      font-size .76em
      margin 0

.home-biography
  &__text
    font-size 18px
    p
      line-height 1.5em
    a
      background-color primaryColor
      color white
      padding .2em .2em 0 
      text-decoration none

.home-projects
  background-color primaryColor
  padding 2em 0
  &__list
    display flex
    flex-direction column

.home-project
  color white
  margin 1em 0
  &__description
    font-family secondaryFont



.posts-container
  padding 0 1em
  .post
    margin 1em 0

.post
  box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)
  &__link
    color textPrimaryColor
    display block
    text-decoration none
  &__img
    width 100%
  &__content
    padding 1em
  &__title
    font-size 14px
    margin 0
  &__excerpt
    font-size 12px
  &__details
    display flex
    justify-content:space-between;
  &__date
    font-size 12px

.tags
  font-size 12px
  color white
  &__item
    border-radius: 5px
    padding 0.1em 0.5em
    &--firebase
      background tagFirebaseColor
    &--angular
      background tagAngularColor

.footer
  background-color textPrimaryColor
  color white
  padding 1em 0
  &__copy
    margin 0
    padding 0 1em


@media only screen and (min-width: 640px)
  .wrapper
    margin 0 auto
    max-width 900px

  .information
    &__text
      text-align left
      h2
        margin 0
    &--internal
      height 20vh

@media only screen and (min-width: 900px)
  .information
    background-image url(../images/background.jpg)
