@import '_normalize'
@import 'config'

primaryFont = 'ADAM.CG PRO', sans-serif 
secundaryFont = 'Assistant', sans-serif

body
  font-family primaryFont
  color text_color
  font-size 16px

::selection
  background-color primary_color
  color white

.logo
  display block
  color white
  height 44px
  border 4px solid white
  font-size 35px
  width 44px
  text-align center
  span
    vertical-align sub

.header
  position fixed
  width 100%
  &--blue
    background-color primary_color

.navigation
  align-items center
  display flex
  justify-content space-between
  margin 1em

.menu
  justify-content center
  display flex
  font-size 0.9em
  font-weight 300
  list-style none
  margin 0
  padding 0
  &__link
    color rgba(255,255,255,0.5)
    margin-left 1rem
    text-decoration none
  &__active
    color rgba(255,255,255,1)

.presentation
  background-color primary_color
  background-image url(../images/background.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  height 100vh  
  &__hover
    background-color rgba(0,0,0,.5)
    height 100%
  &__wrapper
    align-items center    
    display flex
    flex-direction column      
    height 100%
    justify-content center    
  &__text
    color white
    text-align center
    max-width 250px
    h2      
      font-size 4.687em
      margin 0
    p
      font-size .76em
      margin 0

.general-bio
  &__text
    font-size 18px
    padding 4em 1.5em
    p
      line-height 1.5em
    a
      background-color primary_color
      color white
      padding .2em .2em 0 
      text-decoration none



.posts-container
  padding 0 1em
  .post
    margin 1em 0

.post
  box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)
  &__link
    color text_color
    display block
    text-decoration none
  &__img
    width 100%
  &__content
    padding 1em
  &__title
    font-size 14px
    margin 0
  &__excerpt
    font-size 12px
  &__details
    display flex
    justify-content:space-between;
  &__date
    font-size 12px

.tags
  font-size 12px
  color white
  &__item
    border-radius: 5px
    padding 0.1em 0.5em
    &--firebase
      background firebase_color
    &--angular
      background angular_color

.footer
  background-color text_color
  color white
  padding 1em 0
  &__copy
    margin 0
    padding 0 1em

.internal-post
  &__img
    font-size 0
    img
      font-size 1rem
      width 100%
  &__container
    padding 1em

.social
  display flex
  list-style none
  padding 0
  margin 1em 0
  &__link
    color white
    font-size 20px
    margin-right 0.5em
    text-decoration none


@media only screen and (min-width: 640px)
  .wrapper
    margin 0 auto
    max-width 900px

  .menu
    font-size 1.1em

  .information
    &__text
      text-align left
      h2
        margin 0
    &--internal
      height 20vh

  .posts-container
    display flex
    flex-wrap wrap
    justify-content: space-between;
    .post
      width 49%

@media only screen and (min-width: 900px)
  .information
    background-image url(../images/background.jpg)

  .posts-container
    padding 0
