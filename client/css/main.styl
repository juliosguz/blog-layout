@import 'vendor'
@import 'config'

body
  font-family primaryFont
  color textPrimaryColor
  font-size 16px

::selection
  background-color primaryColor
  color white

.wrapper
  display block
  margin 0 1em
  padding 1em 0

.logo
  display block
  color white
  height 44px
  border 4px solid white
  font-size 35px
  width 44px
  text-align center
  span
    vertical-align sub

.page
  &__title
    border 4px solid white
    color white
    display inline-block
    font-size 22px
    margin 0
    padding .8em .4em .6em

.header
  position fixed
  width 100%
  z-index 9999
  &--blue
    background-color primaryColor
    box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)

.navigation
  align-items center
  display flex
  justify-content space-between

.menu
  justify-content center
  display flex
  font-size 0.9em
  font-weight 300
  list-style none
  margin 0
  padding 0
  &__link
    color rgba(255,255,255,0.5)
    margin-left 1rem
    text-decoration none
    &:hover
      color rgba(255,255,255,1)
  &__active
    color rgba(255,255,255,1)

.home-presentation
  background-color primaryColor
  background-image url(../images/background.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  height 100vh  
  &__hover
    background-color rgba(0,0,0,.5)
    height 100%
  &__wrapper
    align-items center    
    display flex
    flex-direction column      
    height 100%
    justify-content center    
  &__text
    color white
    text-align center
    max-width 250px
    h2      
      font-size 4.687em
      margin 0
    p
      font-size .76em
      margin 0

.home-biography
  &__text
    font-size 18px
    p
      line-height 1.5em
    a
      background-color primaryColor
      color white
      padding .2em .2em 0 
      text-decoration none

.home-projects
  background-color primaryColor
  padding 2em 0
  &__list
    display flex
    flex-direction column

.home-project
  color white
  margin 1em 0
  max-width 350px
  &__description
    font-family secondaryFont

.home-posts
  background-color secondaryColor
  padding 2em 0
  &__list
    display flex
    flex-direction column
    margin 1em 0
  &__title
    margin 0 1rem

.single-post
  color white
  margin 1em 0
  position relative
  a
    color white
  &__image
    display block
    margin 0
    img
      width 100%
  &__info
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    &:hover
      background-color rgba(0,0,0,.6)
  &__info-wrapper
    height 100%
    position relative
  &__info-bottom,
  &__info-top
    position absolute
  &__info-bottom
    bottom 1em
    left 1em
  &__info-top
    top 1em
    right 1em
  &__title
    margin 0
  &__date
    display flex
    flex-direction column
    .day
      font-size 32px
    .month
      font-size 23px
    .year
      font-size 18px

.tags
  display flex
  font-family secondaryFont
  font-size 12px
  color white
  font-weight 700
  &__item
    color textPrimaryColor
    margin-top 1em
    margin-right 1em
    padding .5em
    padding-top .2em
    padding-bottom .3em
    &--firebase
      background tagFirebaseColor
    &--angular
      background tagAngularColor

.footer
  background-color black
  color white
  font-size 1em
  text-align center
  &__social,
  &__contact
    margin 4em 0
  &__contact
    a
      color white
      font-family secondaryFont
      text-decoration none
  &__top-area
    .social
      justify-content center
  &__bottom-area
    .logo 
      margin 0 auto
    p
      font-family secondaryFont

.social
  display flex
  list-style none
  margin 0
  padding 0
  &__link
    color white
    font-size 30px
    margin .3rem
    text-decoration none


@media only screen and (min-width: 640px)
  .home-presentation    
    &__text
      max-width none
  .home-projects
    &__list
      flex-direction row
      justify-content space-around
  
  .footer
    &__top-area
      display flex
      justify-content space-around


@media only screen and (min-width: 900px)
  .home-posts
    &__list
      flex-direction row
    &__item
      flex 1

@media only screen and (min-width: 1000px)
  .wrapper
    margin 0 auto
    max-width 900px
  .home-presentation    
    &__wrapper
      align-items flex-end
