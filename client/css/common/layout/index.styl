body
  background-color backgroundPrimaryColor
  color textPrimaryColor
  font-family primaryFont  
  font-size 16px

::selection
  background-color primaryColor
  color white

.wrapper
  display block
  margin 0 1em
  padding 1em 0

.logo
  display block
  color white
  height 44px
  border 4px solid white
  font-size 35px
  width 44px
  text-align center
  span
    vertical-align sub

.page
  &__title
    border 4px solid white
    color white
    display inline-block
    font-size 22px
    margin 0
    padding .8em .4em .6em

.header
  position fixed
  width 100%
  z-index 9999
  &--blue
    background-color primaryColor
    box-shadow 0 4px 4px rgba(0,0,0,0.24),0 0 4px rgba(0,0,0,0.12)

.navigation
  align-items center
  display flex
  justify-content space-between

.menu
  justify-content center
  display flex
  font-size 0.9em
  font-weight 300
  list-style none
  margin 0
  padding 0
  &__link
    color rgba(255,255,255,0.5)
    margin-left 1rem
    text-decoration none
    &:hover
      color rgba(255,255,255,1)
  &__active
    color rgba(255,255,255,1)

.footer
  background-color black
  color white
  font-size 1em
  text-align center
  &__social,
  &__contact
    margin 4em 0
  &__contact
    a
      color white
      font-family secondaryFont
      text-decoration none
  &__top-area
    .social
      justify-content center
  &__bottom-area
    .logo 
      margin 0 auto
    p
      font-family secondaryFont

.tags
  display flex
  font-family secondaryFont
  font-size 12px
  color white
  font-weight 700
  &__item
    color textPrimaryColor
    margin-top 1em
    margin-right 1em
    padding .5em
    padding-top .2em
    padding-bottom .3em
    &--firebase
      background tagFirebaseColor
    &--angular
      background tagAngularColor
      
.social
  display flex
  list-style none
  margin 0
  padding 0
  &__link
    color white
    font-size 30px
    margin .3rem
    text-decoration none

@media only screen and (min-width: 640px)  
  .footer
    &__top-area
      display flex
      justify-content space-around

@media only screen and (min-width: 1000px)
  .wrapper
    margin 0 auto
    max-width 900px